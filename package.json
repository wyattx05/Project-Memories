{
  "name": "snapchat-memories-viewer",
  "version": "1.0.0",
  "description": "A desktop application for viewing Snapchat Memories with metadata",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "snapchat",
    "memories",
    "viewer",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.snapchat.memories.viewer",
    "productName": "Snapchat Memories Viewer",
    "files": [
      "electron/**/*",
      "src/**/*",
      "python/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "category": "public.app-category.photography",
      "icon": "assets/icons/Apple-Icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/Windows-Icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics",
      "icon": "assets/icons/icon.png"
    }
  }
}
